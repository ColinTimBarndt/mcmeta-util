{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "sourceRoot": "src",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "isolatedModules": true,
  },
  "include": [
    "src/**/*"
  ]
}